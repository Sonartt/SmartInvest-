# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.cs text diff=csharp eol=lf
*.csproj text eol=lf
*.sln text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.xml text eol=lf
*.config text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts (must be LF)
*.sh text eol=lf

# Windows scripts (must be CRLF)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.env.example text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.dll binary
*.exe binary
*.pdb binary
*.nupkg binary
*.snupkg binary

# Prevent massive diffs for minified files
*.min.js -diff
*.min.css -diff
