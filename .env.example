# Copy this file to .env and fill in real credentials. DO NOT commit real secrets.

# Server Configuration
PORT=3000
NODE_ENV=development

# M-Pesa (Safaricom Daraja)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_PASSKEY=
MPESA_NUMBER=
MPESA_SHORTCODE=
MPESA_PAYBILL=
MPESA_ACCOUNT_REF=SmartInvest
MPESA_CALLBACK_URL=https://yourdomain.com/api/pay/mpesa/callback
MPESA_CALLBACK_SECRET=
MPESA_ENV=sandbox
MPESA_DEBUG=false

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_ENV=sandbox
PAYPAL_RETURN_URL=https://yourdomain.com/paypal/return
PAYPAL_CANCEL_URL=https://yourdomain.com/paypal/cancel
EXCHANGE_RATE_KES_USD=0.0065

# KCB Bank (manual deposits)
KCB_BANK_NAME=KCB Bank
KCB_ACCOUNT_NAME=SmartInvest Africa
KCB_ACCOUNT_NUMBER=0000000000

# Email / SMTP (optional - configure to receive notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=SmartInvest <no-reply@yourdomain.example>
NOTIFY_EMAIL=

# Admin basic auth (optional) â€” set to enable admin auth
ADMIN_USER=
ADMIN_PASS=

# When no SMTP is configured, the server will create an Ethereal test account in non-production.
# To force Ethereal use, set NODE_ENV to anything other than 'production'.

