        <script>
          (function(){
            const select = document.getElementById('countrySelect');
            const mpBtn = document.getElementById('mpesaPayPublicBtn');
            const kcbBtn = document.getElementById('kcbPayPublicBtn');
            const badgeMp = document.getElementById('badgeMpesa');
            const badgeK = document.getElementById('badgeKcb');
            
            function applyCountry(code){
              const isKE = String(code||'').toUpperCase()==='KE';
              if (badgeMp) badgeMp.textContent = isKE ? 'Live' : 'Kenya only';
              if (badgeMp) badgeMp.className = isKE ? 'text-xs px-2 py-1 rounded bg-green-100 text-green-700' : 'text-xs px-2 py-1 rounded bg-yellow-100 text-yellow-700';
              if (badgeK) badgeK.textContent = isKE ? 'Live' : 'Kenya only';
              if (badgeK) badgeK.className = isKE ? 'text-xs px-2 py-1 rounded bg-green-100 text-green-700' : 'text-xs px-2 py-1 rounded bg-yellow-100 text-yellow-700';
              if (mpBtn) { mpBtn.disabled = !isKE; mpBtn.title = isKE ? '' : 'Unavailable outside Kenya'; mpBtn.className = isKE ? 'w-full bg-purple-600 text-white px-3 py-2 rounded' : 'w-full border px-3 py-2 rounded text-gray-600'; }
              if (kcbBtn) { kcbBtn.disabled = !isKE; kcbBtn.title = isKE ? '' : 'Unavailable outside Kenya'; kcbBtn.className = isKE ? 'w-full bg-purple-600 text-white px-3 py-2 rounded' : 'w-full border px-3 py-2 rounded text-gray-600'; }
              try { localStorage.setItem('si_country', code); } catch {}
            }
            
            // Auto-detect country via geoIP endpoint
            (async function initCountry() {
              let country = 'KE'; // Default fallback
              try {
                // First try to fetch from server geoIP
                const res = await fetch('/api/geo');
                if (res.ok) {
                  const data = await res.json();
                  country = data.country || 'KE';
                } else {
                  // Fall back to localStorage if API fails
                  country = localStorage.getItem('si_country') || 'KE';
                }
              } catch (err) {
                console.warn('GeoIP detection failed, using localStorage or default:', err);
                try { country = localStorage.getItem('si_country') || 'KE'; } catch {}
              }
              if (select) select.value = country;
              applyCountry(country);
            })();
            
            if (select) select.addEventListener('change', () => applyCountry(select.value));
            if (mpBtn) mpBtn.addEventListener('click', async () => {
              try {
                const phone = prompt('Enter phone (2547XXXXXXXX)'); if (!phone) return;
                const amtStr = prompt('Enter amount in KES', '1000'); const amount = Number(amtStr||'1000');
                mpBtn.disabled = true; mpBtn.textContent = 'Sending...';
                const res = await fetch('/api/pay/mpesa', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ phone, amount, accountReference: 'SmartInvest' }) });
                let data = {}; try { data = await res.json(); } catch {}
                alert(res.ok ? 'M-Pesa STK Push sent. Complete on your phone.' : ('M-Pesa error: ' + (data.error || res.status)));
              } catch(e){ alert('M-Pesa network error'); } finally { mpBtn.disabled = false; mpBtn.textContent = 'Pay now'; }
            });
            if (kcbBtn) kcbBtn.addEventListener('click', async () => {
              const name = prompt('Your full name'); const email = prompt('Your email');
              const amtStr = prompt('Amount in KES', '1000'); const amount = Number(amtStr||'1000');
              const reference = prompt('Reference (optional)', '');
              if (!name || !email || !amount) { alert('Name, email and amount are required'); return; }
              try {
                kcbBtn.disabled = true; kcbBtn.textContent = 'Recording...';
                const res = await fetch('/api/pay/kcb/manual', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ name, email, amount, reference }) });
                let data = {}; try { data = await res.json(); } catch {}
                alert(res.ok && data.success ? 'Transfer recorded. Please complete payment to the provided KCB account.' : ('KCB error: ' + (data.error || res.status)));
              } catch(e){ alert('KCB network error'); } finally { kcbBtn.disabled = false; kcbBtn.textContent = 'Pay now'; }
            });
          })();
        </script>
